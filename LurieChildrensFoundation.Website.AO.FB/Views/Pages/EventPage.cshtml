@using EPiServer.Web.Mvc.Html;

@using LurieChildrensFoundation.AO.FB.Models.Pages;
@using LurieChildrensFoundation.AO.FB.Models.ViewModels;

@model EventPageViewModel<EventPage>
@{ Layout = "~/Views/Shared/Layouts/FullWidth.cshtml"; }

<section>
	<div class="layout container">
		<div class="row">
			<div class="col-12">
				@Html.PropertyFor(model => model.CurrentPage.MainBody)
			</div>
		</div>
	</div>
</section>

<section>
	<div class="layout container">
		<div class="row">
			<div class="col-6">
				@Html.PropertyFor(model => model.CurrentPage.EventDate)
			</div>
			<div class="col-6">
				@Html.PropertyFor(model => model.CurrentPage.Summary)
			</div>
		</div>
	</div>
</section>

<section>
	<div class="layout container">
		<div class="row">
			<div class="col-12">
				<h1>@Html.PropertyFor(model => model.CurrentPage.Name)</h1>
				<p>@Html.PropertyFor(model => model.ViewModelProperty)</p>
				<p>@Html.PropertyFor(model => model.ViewModelPropertyBase)</p>

				<p>@Html.PropertyFor(model => model.SiteLogo.Alt)</p>
				<p>@Url.ContentUrl(Model.SiteLogo.Src)</p>

				<p>@Url.ContentUrl(Model.DonateLink.Href)</p>
			</div>
		</div>
	</div>
</section>